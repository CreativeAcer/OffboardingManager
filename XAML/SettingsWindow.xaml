<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" 
        Height="800" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="$($colors.Background)">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Application Settings" 
                  FontSize="24" 
                  FontWeight="Bold" 
                  Foreground="$($colors.Primary)"
                  Margin="0,0,0,20"/>

        <TabControl Grid.Row="1">
            <!-- General Settings Tab -->
            <TabItem Header="General">
                <ScrollViewer>
                    <StackPanel>
                        <GroupBox Header="General Settings" 
                                    Margin="0,0,0,15"
                                    BorderBrush="$($colors.BorderColor)">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkDemoMode" 
                                            Content="Demo Mode" 
                                            Foreground="$($colors.Text)"
                                            Margin="0,0,0,10"/>
                                <CheckBox Name="chkUseADModule" 
                                            Content="Use AD Module" 
                                            Foreground="$($colors.Text)"
                                            Margin="0,0,0,10"/>
                                <TextBlock Text="Default Domain:"
                                            Foreground="$($colors.Text)"/>
                                <TextBox Name="txtDefaultDomain" 
                                            Background="$($colors.InputBg)"
                                            BorderBrush="$($colors.BorderColor)"
                                            Margin="0,5,0,15"/>
                                <TextBlock Text="Auto-Reply Template:"
                                            Foreground="$($colors.Text)"/>
                                <TextBox Name="txtAutoReplyTemplate" 
                                            TextWrapping="Wrap"
                                            AcceptsReturn="True"
                                            Height="100"
                                            Background="$($colors.InputBg)"
                                            BorderBrush="$($colors.BorderColor)"
                                            Margin="0,5,0,15"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Workflows Tab -->
            <TabItem Header="Workflows">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Workflow Selection -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ComboBox Name="cmbWorkflowList" 
                                         Margin="0,0,10,0"/>
                                <StackPanel Grid.Column="1" 
                                            Orientation="Horizontal">
                                    <Button Name="btnNewWorkflow" 
                                            Content="New" 
                                            Width="60"
                                            Height="30"
                                            Background="$($colors.Secondary)"
                                            Foreground="$($colors.InputBg)"
                                            BorderThickness="0"
                                            Margin="0,0,5,0"/>
                                    <Button Name="btnDeleteWorkflow" 
                                            Content="Delete" 
                                            Width="60"
                                            Height="30"
                                            Background="$($colors.Primary)"
                                            Foreground="$($colors.InputBg)"
                                            BorderThickness="0"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <!-- Workflow Configuration -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column - Task Management -->
                            <StackPanel Grid.Column="0" 
                                        Margin="0,0,10,0">
                                <TextBlock Text="Available Tasks" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,5"
                                          Foreground="$($colors.Text)"/>
                                <ListBox Name="lstAvailableTasks" 
                                         Height="200"
                                         Background="$($colors.InputBg)"
                                         BorderBrush="$($colors.BorderColor)">
                                         <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayName}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            Margin="0,10">
                                    <Button Name="btnAddTask" 
                                            Content="Add &#8594;" 
                                            Width="80"
                                            Height="30"
                                            Background="$($colors.Secondary)"
                                            Foreground="$($colors.InputBg)"
                                            BorderThickness="0"
                                            Margin="0,0,5,0"/>
                                    <Button Name="btnRemoveTask" 
                                            Content="&#8592; Remove" 
                                            Width="80"
                                            Height="30"
                                            Background="$($colors.Primary)"
                                            Foreground="$($colors.InputBg)"
                                            BorderThickness="0"/>
                                </StackPanel>

                                <TextBlock Text="Selected Tasks (Order)" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,5"
                                          Foreground="$($colors.Text)"/>
                                <ListBox Name="lstSelectedTasks" 
                                         Height="200"
                                         Background="$($colors.InputBg)"
                                         BorderBrush="$($colors.BorderColor)">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayName}" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                </ListBox>

                                <StackPanel Orientation="Horizontal" 
                                            HorizontalAlignment="Center" 
                                            Margin="0,10,0,0">
                                    <Button Name="btnMoveUp" 
                                            Content="&#8593;" 
                                            Width="40"
                                            Height="30"
                                            Background="$($colors.Secondary)"
                                            Foreground="$($colors.InputBg)"
                                            BorderThickness="0"
                                            Margin="0,0,5,0"/>
                                    <Button Name="btnMoveDown" 
                                            Content="&#8595;" 
                                            Width="40"
                                            Height="30"
                                            Background="$($colors.Secondary)"
                                            Foreground="$($colors.InputBg)"
                                            BorderThickness="0"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right Column - Settings -->
                            <StackPanel Grid.Column="1" 
                                        Margin="10,0,0,0">
                                <TextBlock Text="Workflow Settings" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,10"
                                          Foreground="$($colors.Text)"/>

                                <TextBlock Text="Name:"
                                          Foreground="$($colors.Text)"
                                          Margin="0,0,0,5"/>
                                <TextBox Name="txtWorkflowName"
                                         Background="$($colors.InputBg)"
                                         BorderBrush="$($colors.BorderColor)"
                                         Margin="0,0,0,10"/>

                                <TextBlock Text="Description:"
                                          Foreground="$($colors.Text)"
                                          Margin="0,0,0,5"/>
                                <TextBox Name="txtWorkflowDescription"
                                         Height="60"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         Background="$($colors.InputBg)"
                                         BorderBrush="$($colors.BorderColor)"
                                         Margin="0,0,0,20"/>

                                <TextBlock Text="Task Settings" 
                                          FontWeight="SemiBold" 
                                          Margin="0,0,0,10"
                                          Foreground="$($colors.Text)"/>
                                <ScrollViewer Height="200"
                                             Background="$($colors.InputBg)"
                                             BorderBrush="$($colors.BorderColor)"
                                             BorderThickness="1">
                                    <StackPanel Name="pnlTaskSettings"
                                                Margin="10">
                                        <!-- Task settings will be added dynamically -->
                                    </StackPanel>
                                </ScrollViewer>

                                <!-- Save Button for Workflow Tab -->
                                <Button Name="btnSaveWorkflow"
                                        Content="Save Workflow"
                                        Height="30"
                                        Background="$($colors.Secondary)"
                                        Foreground="$($colors.InputBg)"
                                        BorderThickness="0"
                                        Margin="0,20,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- Global Save and Close Buttons for Settings -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <!-- TextBlock next to the buttons for status -->
            <TextBlock Name="txtSettingsStatus" 
                       TextWrapping="Wrap" 
                       Foreground="$($colors.Success)" 
                       Margin="0,0,0,0" 
                       VerticalAlignment="Center"/>
            <Button Name="btnSaveSettings" 
                    Content="Save Settings" 
                    Width="100" 
                    Height="30"
                    Background="$($colors.Secondary)"
                    Foreground="$($colors.InputBg)"
                    BorderThickness="0"
                    Margin="0,0,10,0"/>
            <Button Name="btnClose" 
                    Content="Close" 
                    Width="100"
                    Height="30"
                    Background="$($colors.Primary)"
                    Foreground="$($colors.InputBg)"
                    BorderThickness="0"
                    Margin="0,0,10,0"/>
        </StackPanel>
    </Grid>
</Window>
